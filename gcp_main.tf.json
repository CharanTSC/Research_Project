{
  "provider": {
    "google": {
      "project": "your-gcp-project-id",
      "region": "us-central1",
      "zone": "us-central1-a"
    }
  },
  "resource": {
    "google_compute_instance": {
      "compute_with_storage": {
        "name": "compute-with-storage",
        "machine_type": "e2-micro",
        "zone": "us-central1-a",
        "boot_disk": {
          "initialize_params": {
            "image": "debian-cloud/debian-11",
            "size": 40,
            "type": "pd-ssd"
          }
        },
        "network_interface": [
          {
            "network": "default",
            "access_config": [
              {}
            ]
          }
        ]
      }
    }
  }
}